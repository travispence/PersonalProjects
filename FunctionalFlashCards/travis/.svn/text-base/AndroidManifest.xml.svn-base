<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tirame.lagoma"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        
        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name =".ViewDeck"
            android:label="deck">
        
        </activity>
        
        
        <activity 
            android:name=".ViewDeckList"
            android:label="@string/deck_list_title">
        </activity>
        
        
        
        <activity 
            android:name=".OptionsMenu"
            android:label="@string/options_title"> 
        </activity>
        
        
        <activity 
            android:name=".CreateDeck"
            android:label="@string/create_deck_title">    
        </activity>
    </application>

</manifest>